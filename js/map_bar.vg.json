{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/ZhanZhynn/3179-Homework_Week9/main/data/catsvdogs.csv"
  },
  "projection": {"type": "albersUsa"},
  "vconcat": [
    {
      "layer": [
        {
        "params": [
          {"name": "continent_highlight", 
          "select": {"type": "point","fields":["Region"]}, "bind": "legend"}
          ],
          "width": 650,
          "height": 300,
          "mark": {"type": "square"},
          "encoding": {
            "color": {
              "field": "Region",
              "title": "Select Region:",
              "legend": {"orient": "bottom", "labelFontSize": 12}
            }
          }
        },

        {
        "title": "Pet Owners in United States",
          "data": {
            "url": "https://raw.githubusercontent.com/ZhanZhynn/3179-Homework_Week9/main/js/us_states.topojson.txt",
            "format": {
                  "type": "topojson",
                  "feature": "cb_2018_us_state_500k"
                }
          },
          
          "transform": [{
              "lookup": "properties.NAME",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/ZhanZhynn/3179-Homework_Week9/main/data/catsvdogs.csv"
                },
                "key": "Location",
                "fields": ["NumberofPetHouseholds","NumberofHouseholds","Region"]
              }
            },
            {"calculate": "datum.NumberofPetHouseholds/datum.NumberofHouseholds*100", "as": "Pet Owners per 100 Households"}
          ],

          "projection": {
            "type": "albersUsa"
          },  
          
          "mark": {
            "type": "geoshape",
            "stroke": "#757575"
            
            },
          
          "encoding": {
            "color": {
              "field": "Pet Owners per 100 Households",
              "type": "quantitative",
              "scale": {
                "type": "threshold",
                "domain": [50, 55, 60,65,70,75],
                "range": ["#feedde","#fdd0a2", "#fdae6b", "#fd8d3c","#f16913","#d94801","#8c2d04"]
                }
                  },
            "opacity": {
              "condition": {"selection": "continent_highlight", "value": 1},
              "value": 0.3
            },
            "tooltip": [
              {"field": "properties.NAME", "type": "nominal", "title": "State"},
              {"field": "Pet Owners per 100 Households", "type": "quantitative", "format":".0f"}
            ]
          }
        }

      ]
    },


    {
      "layer": [
        {
      "title": "Average Number of Pet Households (1000s)",
            "width": 733,
            "mark": "bar",
            "encoding": {
              "x": {"field": "Location", 
                "type": "nominal",
                "sort": "color",
                "axis": {"labels": false}
                },
              "y": {
                "aggregate": "mean",
                "field": "NumberofPetHouseholds",
                "type": "quantitative"
              },
              "color": {
                "field": "Region",
                "type": "nominal",
                "scale": {},
                "legend":null
              },
              "opacity": {
                    "condition": {"param": "continent_highlight", "value": 1},
                    "value": 0.1
                  },
              "tooltip": [
                {"field": "Location", "type": "nominal", "title": "States"},
                {
                  "field": "NumberofPetHouseholds",
                  "type": "quantitative",
                  "format": ",",
                  "title": "Number of Pets Households"
                }
              ]
            }
        },
        {
            "transform": [{"filter": {"param": "continent_highlight"}}],
            "mark": "rule",
            "encoding": {
              "y": {
                "aggregate": "mean",
                "field": "NumberofPetHouseholds",
                "type": "quantitative"
              },
              "color": {"value": "firebrick"},
              "size": {"value": 3}
            }
        }
      ]
    }
  ],
  "config": {}
}
