{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "config": {"view": {"stroke": ""}},
    "width":300,
    "height":300,
    "description": "Overview of Dogs and Cats in US",
    "data": {
      "values": [
        {"Pets": "Dog", "value": 48.65, "population":69294},
        {"Pets": "Cat", "value": 51.35,"population":73147}
      ]
    },
    "mark": {"type": "arc", "innerRadius": 100},
    "encoding": {
      "theta": {"field": "value", "type": "quantitative", "stack": true},
      "color": {"field": "Pets", "type": "nominal"},
      
      "tooltip": [
      {"field": "Pets", "type": "nominal", "title": "Pets"},

      {
        "field": "population",
        "type": "quantitative",
        "format": ",",
        "title": "Pets Population (1000s)"
      }
    ]
    },
  
    "layer": [{
      "mark": {"type": "arc", "innerRadius": 100}
    }, {
      "mark": {"type": "text", "radius": 180},
      "encoding": {
        "text": {"field": "value", "type": "quantitative"}
      }
    }]
  
}
