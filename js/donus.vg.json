{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "config": {"view": {"stroke": ""}},
    "width":300,
    "height":300,
    "description": "Overview of Dogs and Cats in US",
    "data": {
      "values": [
        {"Pets": "Dog", "value": 0.4865, "population":69294},
        {"Pets": "Cat", "value": 0.5135,"population":73147}
      ]
    },
    "mark": {"type": "arc", "innerRadius": 100},
    "encoding": {
      "theta": {"field": "value", "type": "quantitative", "stack": true,"scale": {"reverse": true}},
      "color": {"field": "Pets", "type": "nominal","scale":{"range": [" #727171","#964B00"]}},
      
      "tooltip": [
      {"field": "Pets", "type": "nominal", "title": "Pet"},

      {
        "field": "population",
        "type": "quantitative",
        "format": ",",
        "title": "Pets Population (1000s)"
      }
    ]
    },
  
    "layer": [{
      "mark": {"type": "arc", "innerRadius": 100}
    }, {
      "mark": {"type": "text", "radius": 180},
      "encoding": {
        "text": {"field": "value", "type": "quantitative","format": ".2%"}
      }
    },
    {
      "mark": {"type": "text", "radius": 180,"dy":-15},
      "encoding": {
        "text": {"field": "Pets", "type": "nominal","fontWeight": "bold"}
      }
    }
    
    
    ]
  
}
